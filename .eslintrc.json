{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error", "debug"] }],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "globals": {
    "hljs": "readonly",
    "marked": "readonly",
    "mermaid": "readonly",
    "DOMPurify": "readonly",
    "CodeMirror": "readonly"
  }
}
